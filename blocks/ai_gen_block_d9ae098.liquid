{% doc %}
  @prompt
    three image panel

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-three-image-panel-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-three-image-panel__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: #f4f4f4;
  }

  .ai-three-image-panel__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    overflow: hidden;
  }

  .ai-three-image-panel__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;transition: transform 0.3s ease;
  }

  .ai-three-image-panel__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-three-image-panel__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-three-image-panel__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-three-image-panel__content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;text-align: {{ block.settings.text_alignment }};
  }

  .ai-three-image-panel__title-{{ ai_gen_id }} {
    margin: 0 0 8px 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
  }

  .ai-three-image-panel__description-{{ ai_gen_id }} {
    margin: 0 0 16px 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
  }

  .ai-three-image-panel__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-three-image-panel__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-three-image-panel__item-{{ ai_gen_id }}:hover .ai-three-image-panel__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  @media screen and (max-width: 749px) {
    .ai-three-image-panel-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap | times: 0.75 }}px;padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-three-image-panel__content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }

    .ai-three-image-panel__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-three-image-panel__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-three-image-panel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..3) %}
    {% liquid
      assign image_key = 'image_' | append: i
      assign title_key = 'title_' | append: i
      assign description_key = 'description_' | append: i
      assign button_text_key = 'button_text_' | append: i
      assign button_link_key = 'button_link_' | append: i

      assign image = block.settings[image_key]
      assign title = block.settings[title_key]
      assign description = block.settings[description_key]
      assign button_text = block.settings[button_text_key]
      assign button_link = block.settings[button_link_key]
    %}

    <div class="ai-three-image-panel__item-{{ ai_gen_id }}">
      <div class="ai-three-image-panel__image-wrapper-{{ ai_gen_id }}">
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            class="ai-three-image-panel__image-{{ ai_gen_id }}"loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
          >
        {% else %}
          <div class="ai-three-image-panel__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-three-image-panel__empty-state-{{ ai_gen_id }}">
              Add image {{ i }}
            </div>
          </div>
        {% endif %}
      </div>

      {% if title != blank or description != blank or button_text != blank %}
        <div class="ai-three-image-panel__content-{{ ai_gen_id }}">
          {% if title != blank %}
            <h3 class="ai-three-image-panel__title-{{ ai_gen_id }}">{{ title }}</h3>
          {% endif %}

          {% if description != blank %}
            <div class="ai-three-image-panel__description-{{ ai_gen_id }}">{{ description }}</div>
          {% endif %}

          {% if button_text != blank and button_link != blank %}
            <a href="{{ button_link }}" class="ai-three-image-panel__button-{{ ai_gen_id }}">
              {{ button_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>

