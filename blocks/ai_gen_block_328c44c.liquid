{% doc %}
  @prompt
    two image panel with a text box overlayed on top in between them

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-dual-panel-{{ ai_gen_id }} {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.panel_gap }}px;
    min-height: {{ block.settings.panel_height }}px;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px;
  }

  .ai-dual-panel__image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-dual-panel__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-dual-panel__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-dual-panel__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-dual-panel__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-dual-panel__text-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: {{ block.settings.text_background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.text_padding }}px;
    border-radius: {{ block.settings.text_border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.text_max_width }}px;
    width: 90%;
    z-index: 2;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-dual-panel__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin:0 0 {{ block.settings.text_spacing }}px 0;
    font-weight: 600;
  }

  .ai-dual-panel__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  .ai-dual-panel__button-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: {{ block.settings.text_spacing }}px;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-dual-panel__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-dual-panel-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.panel_gap | divided_by: 2 }}px;
      min-height: {{ block.settings.panel_height | times: 0.7 }}px;
      padding: {{ block.settings.section_padding | divided_by: 2 }}px;
    }

    .ai-dual-panel__text-overlay-{{ ai_gen_id }} {
      position: relative;
      top: auto;
      left: auto;
      transform: none;
      margin-top: 20px;
      width: 100%;
      max-width: none;
    }
  }
{% endstyle %}

<div class="ai-dual-panel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-dual-panel__image-container-{{ ai_gen_id }}">
    {% if block.settings.left_image %}
      <img
        src="{{ block.settings.left_image | image_url: width: 800 }}"
        alt="{{ block.settings.left_image.alt | escape }}"
        class="ai-dual-panel__image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.left_image.width }}"
        height="{{ block.settings.left_image.height }}"
      >
    {% else %}
      <div class="ai-dual-panel__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-dual-panel__empty-state-{{ ai_gen_id }}">
          Add left image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-dual-panel__image-container-{{ ai_gen_id }}">
    {% if block.settings.right_image %}
      <img
        src="{{ block.settings.right_image | image_url: width: 800 }}"
        alt="{{ block.settings.right_image.alt | escape }}"
        class="ai-dual-panel__image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.right_image.width }}"
        height="{{ block.settings.right_image.height }}"
      >
    {% else %}
      <div class="ai-dual-panel__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-dual-panel__empty-state-{{ ai_gen_id }}">
          Add right image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-dual-panel__text-overlay-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-dual-panel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    
    {% if block.settings.text != blank %}
      <div class="ai-dual-panel__text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
    {% endif %}
    
    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-dual-panel__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

