{% doc %}
  @prompt
    section for press/blog reviews.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-press-reviews-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-press-reviews__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-press-reviews__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-press-reviews__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;font-weight: 600;
  }

  .ai-press-reviews__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-press-reviews__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-press-review-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    border: 1px solid {{ block.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-press-review-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-press-review-card__logo-{{ ai_gen_id }} {
    height: {{ block.settings.logo_height }}px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
  }

  .ai-press-review-card__logo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-press-review-card__logo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-press-review-card__content-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-press-review-card__excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin-bottom: 20px;
    flex-grow: 1;
  }

  .ai-press-review-card__meta-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }

  .ai-press-review-card__publication-{{ ai_gen_id }} {
    font-size: {{ block.settings.publication_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-press-review-card__date-{{ ai_gen_id }} {
    font-size: {{ block.settings.date_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-press-review-card__link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    font-weight: 500;
    margin-top: 16px;
    transition: color 0.3s ease;
  }

  .ai-press-review-card__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-press-review-card__link-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .ai-press-review-card__link-{{ ai_gen_id }}:hover svg {
    transform: translateX(4px);
  }

  .ai-press-reviews__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-press-reviews__empty-state-{{ ai_gen_id }} h3 {
    margin: 0 0 8px;
    font-size: 18px;
  }

  .ai-press-reviews__empty-state-{{ ai_gen_id }} p {
    margin: 0;
    font-size: 14px;
    opacity: 0.8;
  }

  @media screen and (max-width: 768px) {
    .ai-press-reviews__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-press-review-card__meta-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;gap: 8px;
    }
  }
{% endstyle %}<div class="ai-press-reviews-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-press-reviews__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-press-reviews__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-press-reviews__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-press-reviews__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_reviews = false %}
    {% for i in (1..5) %}
      {% liquid
        assign publication_key = 'review_' | append: i | append: '_publication'
        assign excerpt_key = 'review_' | append: i | append: '_excerpt'
        assign date_key = 'review_' | append: i | append: '_date'
        assign link_key = 'review_' | append: i | append: '_link'
        assign logo_key = 'review_' | append: i | append: '_logo'

        assign publication = block.settings[publication_key]
        assign excerpt = block.settings[excerpt_key]
        assign date = block.settings[date_key]
        assign link = block.settings[link_key]
        assign logo = block.settings[logo_key]%}
      
      {% if publication != blank or excerpt != blank %}
        {% assign has_reviews = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_reviews %}
      <div class="ai-press-reviews__grid-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign publication_key = 'review_' | append: i | append: '_publication'
            assign excerpt_key = 'review_' | append: i | append: '_excerpt'
            assign date_key = 'review_' | append: i | append: '_date'
            assign link_key = 'review_' | append: i | append: '_link'
            assign logo_key = 'review_' | append: i | append: '_logo'

            assign publication = block.settings[publication_key]
            assign excerpt = block.settings[excerpt_key]
            assign date = block.settings[date_key]
            assign link = block.settings[link_key]
            assign logo = block.settings[logo_key]
          %}
          
          {% if publication != blank or excerpt != blank %}
            <div class="ai-press-review-card-{{ ai_gen_id }}">
              {% if logo != blank %}
                <div class="ai-press-review-card__logo-{{ ai_gen_id }}">
                  <img
                    src="{{ logo | image_url: width: 200}}"
                    alt="{{ publication | escape }}"
                    loading="lazy"
                    width="200"
                    height="{{ block.settings.logo_height }}"
                    style="width: auto; height: 100%; max-width: 100%; object-fit: contain;"
                  >
                </div>
              {% else %}
                <div class="ai-press-review-card__logo-{{ ai_gen_id }}">
                  <div class="ai-press-review-card__logo-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                </div>
              {% endif %}

              <div class="ai-press-review-card__content-{{ ai_gen_id }}">
                {% if excerpt != blank %}
                  <div class="ai-press-review-card__excerpt-{{ ai_gen_id }}">
                    "{{ excerpt }}"
                  </div>
                {% endif %}

                <div class="ai-press-review-card__meta-{{ ai_gen_id }}">
                  {% if publication != blank %}
                    <div class="ai-press-review-card__publication-{{ ai_gen_id }}">
                      {{ publication }}
                    </div>
                  {% endif %}
                  {% if date != blank %}
                    <div class="ai-press-review-card__date-{{ ai_gen_id }}">
                      {{ date }}
                    </div>
                  {% endif %}</div>

                {% if link != blank %}
                  <a href="{{ link }}" class="ai-press-review-card__link-{{ ai_gen_id }}" target="_blank" rel="noopener">
                    Read full review
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M7 17L17 7"></path>
                      <path d="M7 7h10v10"></path>
                    </svg>
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-press-reviews__empty-state-{{ ai_gen_id }}">
        <h3>Add your press reviews</h3>
        <p>Configure the review settings to showcase your media coverage and testimonials</p>
      </div>
    {% endif %}
  </div>
</div>

