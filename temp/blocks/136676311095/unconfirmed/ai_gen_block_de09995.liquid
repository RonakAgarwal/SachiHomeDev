{% doc %}
  @prompt
    create a white filler i can modify the height of

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-white-filler-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    height: {{ block.settings.height }}px;
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .ai-white-filler-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }
  }
{% endstyle %}

<div 
  class="ai-white-filler-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
></div>

{% schema %}
{
  "name": "White filler",
  "settings": [
    {
      "type": "range",
      "id": "height",
      "min": 10,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Height",
      "default": 50
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 10,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Mobile height",
      "default": 30
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "White filler"
    }
  ],
  "tag": null
}
{% endschema %}